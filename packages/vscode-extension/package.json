{
	"name": "@sling/vscode",
	"displayName": "Sling â€” HTTP Client",
	"description": "Send HTTP requests directly from TypeScript definition files with CodeLens integration",
	"version": "0.1.0",
	"publisher": "slng",
	"engines": {
		"vscode": "^1.85.0"
	},
	"categories": [
		"Testing",
		"Other"
	],
	"activationEvents": [
		"onLanguage:typescript",
		"workspaceContains:**/slng.config.mts"
	],
	"main": "./dist/extension.js",
	"exports": {
		".": {
			"require": "./dist/extension.js"
		},
		"./response.webview.global": {
			"import": "./dist/response.webview.global.js"
		}
	},
	"contributes": {
		"commands": [
			{
				"command": "slng.send",
				"title": "Sling: Send Request"
			},
			{
				"command": "slng.debug",
				"title": "Sling: Debug Request"
			}
		],
		"configuration": {
			"title": "Sling",
			"properties": {
				"slng.defaultEnvironment": {
					"type": "string",
					"default": "",
					"description": "Default environment to use when sending requests"
				},
				"slng.maskSecrets": {
					"type": "boolean",
					"default": true,
					"description": "Mask secret and sensitive values in the response panel"
				}
			}
		},
		"viewsContainers": {
			"secondarySidebar": [
				{
					"id": "resultsContainer",
					"title": "Sling",
					"icon": "media/icon.svg",
					"type": "webview"
				}
			]
		},
		"views": {
			"resultsContainer": [
				{
					"id": "sling.responseDetails",
					"name": "Sling",
					"icon": "media/icon.svg",
					"type": "webview"
				}
			]
		}
	},
	"scripts": {
		"build": "tsup",
		"build:vscode": "tsup",
		"clean": "rm -rf dist",
		"package": "vsce package --no-dependencies"
	},
	"dependencies": {
		"@slng/config": "workspace:*",
		"@vscode/codicons": "^0.0.36",
		"@vscode/webview-ui-toolkit": "^1.4.0"
	},
	"devDependencies": {
		"@types/node": "^25.2.1",
		"@types/vscode": "^1.85.0",
		"@vscode/vsce": "^3.0.0",
		"tsup": "^8.0.0",
		"typescript": "^5.5.0"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/slng/sling",
		"directory": "packages/vscode-extension"
	}
}
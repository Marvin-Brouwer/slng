{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build:extension",
			"type": "process",
			"command": "pnpm",
			"args": [
				// Recursive
				"-r",
				// @slng/config
				"--filter",
				"@slng/config",
				// @slng/vscode-extension
				"--filter",
				"@slng/vscode-extension",
				// Command
				"run",
				"build"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$tsc"
			],
			"presentation": {
				"reveal": "never",
				"panel": "dedicated",
				"revealProblems": "onProblem",
				"close": true
			}
		}
	]
}
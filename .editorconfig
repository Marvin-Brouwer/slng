# Top-most EditorConfig file
root = true

[*]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false
ij_javascript_use_semicolons = false
ij_typescript_use_semicolons = false

[markdown]
trim_trailing_whitespace= false
insert_final_newline = true
[*.md]
trim_trailing_whitespace= false
insert_final_newline = true
[*.{yml,yaml}]
indent_style = space
indent_size = 2
